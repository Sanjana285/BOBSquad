<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homeloan">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="1"
    android:id="@+id/a1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/homeloan"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="30dp"
        android:id="@+id/a2"
        android:layout_below="@id/a1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Home Loan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/a3"
        android:layout_below="@id/a2"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="23dp"
            android:layout_weight="1"
            android:text="Name :- Sanjana Purohit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/a4"
        android:layout_marginTop="10dp"
        android:layout_below="@id/a3"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="23dp"
            android:layout_weight="1"
            android:text="Interest :- 0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/a5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/a4"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="23dp"
            android:layout_weight="1"
            android:text="Duration :- 5 Years"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/a6"
        android:layout_marginTop="10dp"
        android:layout_below="@id/a5"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="23dp"
            android:layout_weight="1"
            android:text="Maximum Amount :- 5,00,000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/a7"
        android:layout_marginTop="20dp"
        android:layout_below="@id/a6"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="I agree to the terms and conditions"
            android:textSize="18dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="I am ready to proceed with this plan"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="30dp"
        android:id="@+id/a8"
        android:layout_marginTop="20dp"
        android:layout_below="@id/a7"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loan"
            android:text="Click to proceed"
            android:textSize="20dp"
            android:background="@drawable/rect_rounded_button"/>

    </LinearLayout>
</RelativeLayout>